{
	"env": {
		"es2022": true,
		"node": true
	},
	"extends": ["airbnb-base", "prettier"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "always",
                "jsx": "always",
                "ts": "always",
                "tsx": "always"
            }
        ],
        "import/no-unresolved": "off",
		"no-bitwise": "off",
		"no-console": "off",
		"quotes": ["error", "single"]
	}
}

